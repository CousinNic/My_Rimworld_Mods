  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_ReinforcedConcrete</defName>
    <label>make reinforced concrete bags</label>
    <description>mixes stone chunks into concrete.</description>
	<researchPrerequisite>SteelConcreteInfusion</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkSandstone</li>
			<li>ChunkGranite</li>
			<li>ChunkSlate</li>
			<li>ChunkMarble</li>
			<li>ChunkLimestone</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
		<filter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</filter>
		<count>10</count>
	</li>
    </ingredients>
    <fixedIngredientFilter>
	  <thingDefs>
			<li>Steel</li>
			<li>ChunkSandstone</li>
			<li>ChunkGranite</li>
			<li>ChunkSlate</li>
			<li>ChunkMarble</li>
